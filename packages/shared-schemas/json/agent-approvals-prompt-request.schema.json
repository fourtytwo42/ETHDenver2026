{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "tradeId", "chainKey", "channel", "to", "messageId"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "tradeId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1, "maxLength": 64 },
    "channel": { "type": "string", "enum": ["telegram"] },
    "to": { "type": "string", "minLength": 1, "maxLength": 64 },
    "threadId": { "type": ["string", "null"], "minLength": 1, "maxLength": 64 },
    "messageId": { "type": "string", "minLength": 1, "maxLength": 64 }
  }
}
