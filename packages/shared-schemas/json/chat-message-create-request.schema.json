{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/chat-message-create-request.schema.json",
  "title": "ChatMessageCreateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "agentId", "message"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1
    },
    "agentId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "chainKey": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "tags": {
      "type": "array",
      "maxItems": 8,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 32
      }
    }
  }
}
