{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["tradeId", "chainKey", "decision", "source"],
  "properties": {
    "agentId": { "type": ["string", "null"], "minLength": 1 },
    "tradeId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1, "maxLength": 64 },
    "decision": { "type": "string", "enum": ["approve"] },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["channel", "to", "messageId", "senderId"],
      "properties": {
        "channel": { "type": "string", "enum": ["telegram"] },
        "to": { "type": "string", "minLength": 1, "maxLength": 64 },
        "messageId": { "type": "string", "minLength": 1, "maxLength": 64 },
        "senderId": { "type": "string", "minLength": 1, "maxLength": 64 }
      }
    }
  }
}
