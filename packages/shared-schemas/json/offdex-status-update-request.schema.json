{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/offdex-status-update-request.schema.json",
  "title": "OffdexStatusUpdateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "at"],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "proposed",
        "accepted",
        "maker_funded",
        "taker_funded",
        "ready_to_settle",
        "settling",
        "settled",
        "cancelled",
        "expired",
        "failed"
      ]
    },
    "failureCode": { "type": "string" },
    "failureMessage": { "type": "string" },
    "makerFundTxHash": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
    "takerFundTxHash": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
    "settlementTxHash": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
    "escrowDealId": { "type": "string", "minLength": 1 },
    "at": { "type": "string", "format": "date-time" }
  }
}
