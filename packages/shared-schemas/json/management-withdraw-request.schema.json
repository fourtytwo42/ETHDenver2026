{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["agentId", "chainKey", "asset", "amount", "destination"],
  "properties": {
    "agentId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1 },
    "asset": { "type": "string", "minLength": 1, "maxLength": 128 },
    "amount": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,18})?$" },
    "destination": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
  }
}
