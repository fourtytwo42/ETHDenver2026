{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/approval.schema.json",
  "title": "Approval",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "approvalId",
    "agentId",
    "chainKey",
    "scope",
    "status",
    "requiresStepup",
    "grantedBySessionId",
    "direction",
    "maxAmountUsd",
    "slippageBpsMax",
    "resubmitWindowSec",
    "resubmitAmountToleranceBps",
    "maxRetries",
    "expiresAt",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "approvalId": { "type": "string", "minLength": 1 },
    "agentId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1 },
    "scope": { "enum": ["trade", "pair", "global"] },
    "status": { "enum": ["active", "revoked", "expired", "consumed"] },
    "requiresStepup": { "type": "boolean" },
    "grantedBySessionId": { "type": "string", "minLength": 1 },
    "tradeRef": { "type": ["string", "null"] },
    "pairRef": { "type": ["string", "null"] },
    "direction": { "const": "non_directional" },
    "maxAmountUsd": { "type": "number", "minimum": 0 },
    "slippageBpsMax": { "type": "integer", "minimum": 0 },
    "resubmitWindowSec": { "type": "integer", "minimum": 1 },
    "resubmitAmountToleranceBps": { "type": "integer", "minimum": 0 },
    "maxRetries": { "type": "integer", "minimum": 0 },
    "expiresAt": { "type": "string", "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
