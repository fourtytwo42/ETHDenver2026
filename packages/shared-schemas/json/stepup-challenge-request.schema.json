{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["agentId", "issuedFor"],
  "properties": {
    "agentId": {
      "type": "string",
      "minLength": 1
    },
    "issuedFor": {
      "type": "string",
      "enum": ["withdraw", "approval_scope_change", "sensitive_action"]
    }
  }
}
