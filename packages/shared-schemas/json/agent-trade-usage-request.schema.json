{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "agentId", "chainKey", "utcDay", "spendUsdDelta", "filledTradesDelta"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "agentId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1 },
    "utcDay": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "spendUsdDelta": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,8})?$" },
    "filledTradesDelta": { "type": "integer", "minimum": 0, "maximum": 100 }
  }
}
