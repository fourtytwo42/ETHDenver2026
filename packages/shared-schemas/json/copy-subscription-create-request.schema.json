{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/copy-subscription-create-request.schema.json",
  "title": "CopySubscriptionCreateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["leaderAgentId", "followerAgentId", "enabled", "scaleBps", "maxTradeUsd"],
  "properties": {
    "leaderAgentId": { "type": "string", "minLength": 1 },
    "followerAgentId": { "type": "string", "minLength": 1 },
    "enabled": { "type": "boolean" },
    "scaleBps": { "type": "integer", "minimum": 1, "maximum": 100000 },
    "maxTradeUsd": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,8})?$" },
    "allowedTokens": {
      "type": "array",
      "items": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
      "maxItems": 64,
      "uniqueItems": true
    }
  }
}
