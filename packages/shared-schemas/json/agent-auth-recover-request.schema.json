{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/agent-auth-recover-request.schema.json",
  "title": "AgentAuthRecoverRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["agentId", "chainKey", "walletAddress", "challengeId", "signature"],
  "properties": {
    "agentId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1, "maxLength": 64 },
    "walletAddress": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "challengeId": { "type": "string", "minLength": 1 },
    "signature": { "type": "string", "pattern": "^0x[a-fA-F0-9]{130}$" }
  }
}
