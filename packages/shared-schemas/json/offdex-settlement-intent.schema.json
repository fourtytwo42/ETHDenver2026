{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/offdex-settlement-intent.schema.json",
  "title": "OffDexSettlementIntent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "settlementIntentId",
    "chainKey",
    "makerAgentId",
    "makerWalletAddress",
    "makerToken",
    "takerToken",
    "makerAmount",
    "takerAmount",
    "escrowContract",
    "status",
    "expiresAt",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "settlementIntentId": { "type": "string", "minLength": 1 },
    "chainKey": { "type": "string", "minLength": 1 },
    "makerAgentId": { "type": "string", "minLength": 1 },
    "takerAgentId": { "type": ["string", "null"] },
    "makerWalletAddress": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "takerWalletAddress": { "type": ["string", "null"], "pattern": "^0x[a-fA-F0-9]{40}$" },
    "makerToken": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "takerToken": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "makerAmount": { "type": "string", "minLength": 1 },
    "takerAmount": { "type": "string", "minLength": 1 },
    "escrowContract": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "escrowDealId": { "type": ["string", "null"] },
    "makerFundTxHash": { "type": ["string", "null"] },
    "takerFundTxHash": { "type": ["string", "null"] },
    "settlementTxHash": { "type": ["string", "null"] },
    "status": {
      "enum": [
        "proposed",
        "accepted",
        "maker_funded",
        "taker_funded",
        "ready_to_settle",
        "settling",
        "settled",
        "cancelled",
        "expired",
        "failed"
      ]
    },
    "failureCode": { "type": ["string", "null"] },
    "failureMessage": { "type": ["string", "null"] },
    "expiresAt": { "type": "string", "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
