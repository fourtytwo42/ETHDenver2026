{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/copy-intent.schema.json",
  "title": "CopyIntent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intentId",
    "leaderAgentId",
    "followerAgentId",
    "sourceTradeId",
    "mode",
    "chainKey",
    "pair",
    "tokenIn",
    "tokenOut",
    "targetAmountUsd",
    "leaderAmountUsd",
    "sequence",
    "createdAt",
    "leaderConfirmedAt",
    "expiresAt",
    "status"
  ],
  "properties": {
    "intentId": { "type": "string", "minLength": 1 },
    "leaderAgentId": { "type": "string", "minLength": 1 },
    "followerAgentId": { "type": "string", "minLength": 1 },
    "sourceTradeId": { "type": "string", "minLength": 1 },
    "sourceTxHash": { "type": ["string", "null"] },
    "mode": { "enum": ["mock", "real"] },
    "chainKey": { "type": "string", "minLength": 1 },
    "pair": { "type": "string", "minLength": 3 },
    "tokenIn": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "tokenOut": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
    "targetAmountUsd": { "type": "number", "minimum": 0 },
    "leaderAmountUsd": { "type": "number", "minimum": 0 },
    "sequence": { "type": "integer", "minimum": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "leaderConfirmedAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "status": { "enum": ["pending", "executing", "filled", "rejected", "expired"] },
    "rejectionCode": { "type": ["string", "null"] },
    "rejectionMessage": { "type": ["string", "null"] }
  }
}
