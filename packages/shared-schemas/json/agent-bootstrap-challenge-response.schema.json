{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xclaw.trade/schemas/agent-bootstrap-challenge-response.schema.json",
  "title": "AgentBootstrapChallengeResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "challengeId", "challengeMessage", "expiresAt", "scheme"],
  "properties": {
    "ok": { "type": "boolean", "const": true },
    "challengeId": { "type": "string", "minLength": 1 },
    "challengeMessage": { "type": "string", "minLength": 1 },
    "expiresAt": { "type": "string", "format": "date-time" },
    "scheme": { "type": "string", "enum": ["eip191_personal_sign"] }
  }
}

